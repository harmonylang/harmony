import boundcv;
import list;

const BOUND = 2;
const NPROC = 3;

boundlock = BLnew(BOUND);
BLinit(?boundlock);
acquired = [0,] * NPROC;

def waiter(self, bl):
    BLacquire(bl);
    acquired[self] = 1;
    await sum(acquired) >= BOUND;
    BLrelease(bl);
;

for i in {0..NPROC-1}:
    spawn waiter(i, ?boundlock);
;
