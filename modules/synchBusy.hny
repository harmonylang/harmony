def tas(lk):
    atomically:
        result = !lk
        !lk = True

def Lock():
    result = False

def lock(lk):
    while tas(lk):
        pass

def unlock(lk):
    !lk = False

def Condition(lk):
    result = lk

def wait(c):
    unlock(!c)
    lock(!c)

def notify(c):
    pass

def notifyAll(c):
    pass

def Semaphore(cnt):
    result = cnt

def P(sema):
    atomically when !sema > 0:
        !sema -= 1
                
def V(sema):
    atomically !sema += 1
