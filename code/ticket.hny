const MAX_THREADS = 8

def fetch_and_increment(p):
    atomically:
        result = !p
        !p = (!p + 1) % MAX_THREADS

def Lock():
    result = { .counter: 0, .dispenser: 0 }

def acquire(lk):
    let my_ticket = fetch_and_increment(?lk->dispenser):
        atomically await lk->counter == my_ticket

def release(lk):
    fetch_and_increment(?lk->counter)
